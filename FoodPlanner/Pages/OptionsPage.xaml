<Page x:Class="FoodPlanner.Pages.OptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodPlanner.Pages"
      xmlns:lang="clr-namespace:Languages;assembly=Languages"
      mc:Ignorable="d"
      d:DesignWidth="768"
      d:DesignHeight="432"
      Loaded="RefreshFlagImage">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Click="ChangeLanguage">
            <StackPanel Orientation="Horizontal">
                <Image Name="ImgLangFlagBtn" Width="16" Height="16" Margin="5,0"/>
                <TextBlock Text="{x:Static lang:Resources.ChangeLangSimple}" Margin="5,0"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
