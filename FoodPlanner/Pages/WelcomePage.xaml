<Page x:Class="FoodPlanner.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodPlanner.Pages"
      xmlns:lang="clr-namespace:Languages;assembly=Languages"
      mc:Ignorable="d"
      d:DesignWidth="768"
      d:DesignHeight="432">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Text="{x:Static lang:Resources.WelcomeText1}"/>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="{x:Static lang:Resources.WelcomeText2Pre}"/>
            <Button VerticalAlignment="Center" Content="{x:Static lang:Resources.WelcomeText2Btn}" Click="GoToCreateRecipe"/>
            <TextBlock Text="?"/>
        </StackPanel>
    </StackPanel>
</Page>