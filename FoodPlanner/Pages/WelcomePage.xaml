<Page x:Class="FoodPlanner.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodPlanner.Pages"
      mc:Ignorable="d"
      Title="WelcomePage"
      d:DesignWidth="768"
      d:DesignHeight="432">
    <StackPanel>
        <TextBlock TextWrapping="Wrap">
            Welcome to your personal food planner! 
            Here, you can store all your precious recipes, create a week 
            plan to know what's for dinner and generate a shopping list 
            to know what to buy for the week.
        </TextBlock>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Want to get started right away? Why not "/><Button VerticalAlignment="Center" Content="create a recipe"/><TextBlock Text="?"/>
        </StackPanel>
    </StackPanel>
</Page>
